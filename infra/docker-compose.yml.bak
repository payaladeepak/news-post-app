version: '3.8'
services:
  postgres:
    image: postgres:15
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
      POSTGRES_DB: newsdb
    volumes:
      - pgdata:/var/lib/postgresql/data
    ports:
      - "5432:5432"

  redis:
    image: redis:7
    restart: always
    ports:
      - "6379:6379"

  minio:
    image: minio/minio
    command: server /data --console-address ":9001"
    environment:
      MINIO_ROOT_USER: minioaccess
      MINIO_ROOT_PASSWORD: miniosecret
    volumes:
      - miniodata:/data
    ports:
      - "9000:9000"
      - "9001:9001"

  api:
    build: ./apps/api
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
    volumes:
      - ./apps/api:/code
    working_dir: /code
    depends_on:
      - postgres
      - redis
      - minio
    ports:
      - "8000:8000"

  frontend:
    build: ./apps/frontend
    command: npm run dev
    volumes:
      - ./apps/frontend:/app
    working_dir: /app
    depends_on:
      - api
    ports:
      - "3000:3000"

volumes:
  pgdata:
  miniodata:
